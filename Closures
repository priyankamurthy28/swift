class ViewController: UIViewController {

    override func viewDidLoad() {
        super.viewDidLoad()

//        let numbers = filterGreaterThanValue(numbers: [5,6,7,8,9], value: 4)
//        print(numbers)
        
        
//       let numbers = filteredArrayWithPredicate(closure: { (num) -> Bool in
//            return num > 5
